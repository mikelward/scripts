#!/bin/sh
env | grep HOST
username=$(whoami)
short_hostname=$(hostname)
short_hostname=${short_hostname#$username-}
short_hostname=${short_hostname%%.*}
i3status | while read -r line; do
    line="$(echo "$short_hostname $(showconn) $line" |
        sed -e 's#/ DisplayPort ##' \
            -e 's/Headset/headset/g' \
            -e 's/|//g' \
            -e 's/  */ /g' \
            -e 's/\<P[DS]T\>/PT/g' \
            -e 's/\<GMT\>/UT/g' \
            -e 's/\<BST\>/BT/g')"
    xsetroot -name "$line"
done
